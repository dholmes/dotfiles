# zsh config
for config ($HOME/.config/zsh/*.zsh(N)); do
  source $config
done
unset config

# aliases
alias dot="chezmoi"
[[ -f ~/.aliases ]] && source ~/.aliases

# Local config
[[ -f ~/.zshrc.local ]] && source ~/.zshrc.local

